#include <iostream>
using namespace std;

int main(){
    setlocale(0, "Russian");
    int s = 0, sum = 0;
    for (int a = 0; a<=1000; a +=4){
        if (a % 7==0){
            s+=a;
        }
    }
    cout << "Сумма всех чисел, которые делятся на 7 без остатка(0-1000):"<< s<< endl;
    for (int i = 1; i <= 1000; i += 4) {
        if (i % 7 == 0) {
            sum += i;
        }
    }
    cout << "Сумма всех чисел, которые делятся на 7 без остатка(1-1000):" << sum << endl;
    return 0;
}
