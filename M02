#include <iostream>
#include <math.h>
using namespace std;

float Area(float a, int b){
    float c, S=0;
    double const pi=3.1415;
        c=tan(pi/b);
        S=(a*a*b)/(4*c);
        cout << "Площадь равна:" << S;
    return S;
};
int main(){
    setlocale(0, "Russian");
    int A, N;
    cout<<"Введите длину: ";
    cin >> A;
    cout << "Введите число сторон: ";
    cin >>N;
    Area(A, N);
};
